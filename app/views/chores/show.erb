<h1><%= @chore.title%></h1>
<h2><%= @chore.user.username%></h2>
<form class="checkbox">
  <label>Completed?</label>
  <input type="submit" name="complete" value="Rock Star" id="complete">
</form>
<br></br>
<h3>Expectations:</h3>
<% @chore.tasks.each do |task| %>
<li>
  <h4><%= task.title %></h4>
</li>
<%end%>

<br></br>
<a href="/chores">Back to all the chores</a>
<br></br>
<a href="/chores/<%= @chore.slug%>/edit">Edit chore</a>
<br></br>
<form action="/chores/<%= @chore.slug%>" method="POST">
  <input id="hidden" type="hidden" name="_method" value="delete">
  <button type="submit">Delete Chore</button>
</form>
