<% if flash.has?(:message) %>
  <h1><%=flash[:message]%></h1>
<%end%>

<h1>CHORES!!</h1>
<h2>Welcome, <%= @user.username%></h2>
<h3>Chores deadline is Thursday at 10pm.</h3>
<div class="assignment">
   <% @chores.each do |chore|%>
      <h3><a href="/chores/<%= chore.slug%>"><%= chore.title%></h3>
      <h5><a href="/users/<%= chore.user.id%>"><%= chore.user.username%></h5>
   <%end%>
</div>
<br></br>
<a href="/chores/new">Create a new chore!</a>
