<% if flash.has?(:message) %>
  <h1><%=flash[:message]%></h1>
<%end%>

<h1>New Chore</h1>
<form action="/chores" method="POST">
  <p>Create a new chore:</p>
  <input type="text" name="chore[title]" id="chore_title" placeholder="ex: Kitchen">
  <br></br>
  <h3>Assign it to someone:</h3>
  <select>
    <% @users.each do |user| %>
    <option value="<% user.username%>"><%= user.username %></option>
    <% end %>
  </select>
  <br></br>
  <h3>Assign tasks to the chore:</h3>
  <% Task.all.each do |task| %>
    <input type="checkbox" name="tasks[]" id="<%=task.title%>" value="<%= task.id %>"><%=task.title%></input>
    <br></br>
  <% end %>
  <button type="submit" name="submit">submit</button>
</form>
